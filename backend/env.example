# Database Configuration
# Use 127.0.0.1:5433 to avoid conflict with local PostgreSQL service on port 5432
DATABASE_URL=postgresql://healthpulse:healthpulse@127.0.0.1:5433/healthpulse_db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Environment
ENVIRONMENT=development

# Overpass API Configuration
# Internal Docker service URL (use service name in docker-compose)
OVERPASS_API_URL=http://overpass-api:80
# Cache time-to-live in seconds (default: 300 = 5 minutes)
OVERPASS_CACHE_TTL=300
# Rate limit: queries per minute per client (default: 60)
OVERPASS_RATE_LIMIT=60
# Query timeout in seconds (default: 60)
OVERPASS_TIMEOUT=60

